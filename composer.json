{
    "name": "dobrosite/phpunit-psr-http-client",
    "description": "Инструменты для тестирования кода, использующего PSR-18",
    "type": "library",
    "keywords": [
        "PHPUnit",
        "PSR-18"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Михаил Красильников",
            "email": "m.krasilnikov@yandex.ru"
        }
    ],
    "minimum-stability": "stable",
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true,
            "infection/extension-installer": true
        }
    },
    "scripts": {
        "infection": "vendor/bin/infection -j$(nproc)",
        "phpcs": "vendor/bin/phpcs",
        "phpstan": "vendor/bin/phpstan analyze",
        "phpunit": "vendor/bin/phpunit",
        "tests": [
            "@phpunit",
            "@phpstan",
            "@infection",
            "@phpcs"
        ]
    },
    "conflict": {
        "phpunit/phpunit": ">=9.5.17"
    },
    "require": {
        "php": "^8.0",
        "nyholm/psr7": "^1.0",
        "phpunit/phpunit": "^9.0",
        "psr/http-client": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "DobroSite\\PHPUnit\\PSR18\\": "src/"
        }
    },
    "require-dev": {
        "infection/infection": "0.26.5",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    }
}
